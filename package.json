{
  "name": "boardroom",
  "version": "1.0.0",
  "description": "AI-powered boardroom simulation with expert advisors discussing startup and business strategies",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "openai": "^4.20.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
  "keywords": ["ai", "boardroom", "startup", "advisors", "react", "nodejs"],
  "author": "AI Assistant",
  "license": "MIT"
}
